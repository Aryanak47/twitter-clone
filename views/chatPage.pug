
extends layout/main-layout.pug
block content 
    if errorMessage
        span.errorMessage #{errorMessage}
    else 
        script.
            let chat_id = '!{chat._id}'
        .chatPageContainer 
            .chatTitleBox
                .chatTitlePhoto
                    +createChatImage(chat,logedIn)
                span#chatName(data-toggle="modal",data-target="#chatNameModal")
            .mainContentContainer
                .loadingSpinnerContainer
                        img(src="/img/loadingSpinner.gif", alt="Loading spinner")
                .chatContainer(style="visibility:hidden;")
                    ul.chatMessages
                    .footer
                        textarea.textInputBox(name="messageInput", placeholder="Type a message...")
                        button#SendMsgButton 
                            i.far.fa-paper-plane

        +changeChatName(chat)
block script
    script(src="/js/chatPage.js")

    