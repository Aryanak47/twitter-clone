
extends layout/main-layout.pug
block content 
    if errorMessage
        span.errorMessage #{errorMessage}
    else 
        script.
            let chat_id = '!{chat._id}'
        .chatPageContainer 
            .chatTitleBox
                .chatTitlePhoto
                    +createChatImage(chat.users,logedIn)
                span#chatName(data-toggle="modal",data-target="#chatNameModal")
            .mainContentContainer
                .chatContainer
                    .chatMessages
                    .footer
                        textarea(name="messageInput", placeholder="Type a message...")
                        button#SendMsgButton 
                            i.far.fa-paper-plane

        +changeChatName(chat)
block script
    script(src="/js/chatPage.js")

    